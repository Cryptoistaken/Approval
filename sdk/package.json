{
    "name": "@cryptoistaken/crion",
    "version": "2.1.0",
    "description": "Telegram-based approval system for Phase.dev secrets",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
        "build:types": "tsc ./src/index.ts --emitDeclarationOnly --declaration --outDir dist",
        "prepublishOnly": "bun run build"
    },
    "devDependencies": {
        "@types/node": "^25.0.10",
        "bun-types": "latest",
        "typescript": "^5.0.0"
    },
    "keywords": [
        "phase",
        "secrets",
        "approval",
        "telegram"
    ],
    "author": "cryptoistaken",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Cryptoistaken/Crion"
    },
    "dependencies": {
        "@phase.dev/phase-node": "^3.2.0"
    }
}