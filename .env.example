# Crion Bot Environment Variables
# Copy this file to .env and fill in your values

# Required - Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_ADMIN_CHAT_ID=your_chat_id

# Required - Phase.dev
PHASE_TOKEN=pss_service:v1:your_phase_token
PHASE_APP_ID=your_phase_app_id

# Optional - Server
PORT=3000
DATA_DIR=./data

# Optional - Rate Limiting
RATE_LIMIT=10
RATE_WINDOW=60000

# Optional - Webhook (auto-detected on Railway)
# BOT_URL=https://your-app.up.railway.app
